extends ../layout/index

block content
  h1.text-center.text-3xl.font-extrabold.mb-6.text-majorelle-blue Shopping Cart

  if cartItems.length > 0
    each item in cartItems
      div(class="flex items-center justify-between py-2 border-b border-gray-300")
        p(class="text-lg") #{item.name}
        p(class="text-lg") $#{item.price.toFixed(2)}
        a(href=`/cart/remove-from-cart/${item.id}`, class="text-red-500 hover:text-red-700") Remove

    div(class="flex justify-end mt-4")
      p(class="text-lg font-bold") Total: $#{total.toFixed(2)}

    a(href="/cart/checkout", class="bg-majorelle-blue text-white font-bold px-4 py-2 rounded-full hover:bg-oxford-blue") Checkout
  else
    p(class="text-center text-gray-600") Your cart is empty.
