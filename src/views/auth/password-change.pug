extends ../layout/index

block content 
  div.py-10 
    h1.text-center.text-4xl.font-extrabold.my-10.text-black Photo
      span.font-medium.text-orange Market
    h2.text-center.text-3xl.font-extrabold.text-orange= pagina

    .mt-8.mx-auto.max-w-md 
      .bg-platinum.py-8.px-4.shadow-md.rounded-md
        form(action=`/login/update-password/${tokenPassword}` method="POST").space-y-5 
          div 
            label.block.text-sm.text-orange.uppercase.mb-2.font-bold(for="email") New Password
            input#newPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-orangeColor.mb-2(placeholder="*********" type="password" name="newPassword")
          div 
            label.block.text-sm.text-orange.uppercase.mb-2.font-bold(for="email") Confirm Password
            input#confirmPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-orangeColor.mb-2(placeholder="*********" type="password" name="confirmPassword")

          div.flex.items-center.justify-between
            label.block.tzext-sm.text-taupeColor.uppercase.mb-2.font-bold 
            a.text-xs.text-rsisin-black(href="/login/register" class="hover:underline decoration-ochre decoration-2") Create an account  
            a.text-xs.text-rsisin-black(href="/login" class="hover:underline decoration-ochre decoration-2") Forgot your password? Recover it  

          input(class="w-full  bg-orange hover:bg-russet text-white  hover:text-teal font-bold py-3 cursor-pointer rounded-xl mt-4" type="submit" value="Send")  
