extends ../layout/index

block styles

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Photo
            span.font-normal Market
        h2.text-center.text-2xl.font-extrabold= pagina

        a(href="/photo/create" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Publish Photo 
        
        if photos.length 
            ul(class="divide-y divide-gray-200")
                each photo in photos 
                    li 
                        div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                            div(class="sm:w-1/4 md:w-1/6")
                                img(src=`/img/uploads/${photo.image}` alt=`Photo ${photo.title}` class="w-full h-32 sm:h-24 object-cover")
                            div(class="sm:w-2/4 md:w-3/6 lg:w-4/6")
                                a(class="block text-2xl font-extrabold text-indigo-600 truncate" href="#")= photo.title
                                p(class="text-sm text-black font-bold")= photo.category.name
                                p(class="text-sm text-black font-bold")= photo.price.name
                            div(class="sm:w-1/4 md:w-1/6 lg:w-1/6")
                                script.
                                    console.log('Title:', '#{photo.title}');
                                    console.log('Category:', '#{photo.category.name}');
                                    console.log('Price:', '#{photo.price.name}');
        else 
            div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10")
                p.text-center.text-gray-700 No photos yet
